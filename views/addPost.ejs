<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
<h1 class="text-xl opacity-10 mt-3 ">create a new post</h1>
<form action="/createPost"method="post" enctype="multipart/form-data">
    <input class="block text-black w-1/3 px-3 py-2 border-2" type="text" name="title" placeholder="title">
    <input class="block text-black w-1/3 px-3 py-2 border-2 rounded-md mt-2 h-60" type="textarea" name="description" placeholder="description">
    <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="file" name="postimage" placeholder="image">
    <input class="block w-1/3 px-3 py-2 rounded-md bg-red-700" type="submit" name="submit" value="Create Post"> 
</form>
</div>

